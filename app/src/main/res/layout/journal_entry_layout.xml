<?xml version="1.0" encoding="utf-8"?><!-- This linear layout contains a single item displayed in the JournalActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    tools:context="com.alistairholmes.devjournal.JournalActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:id="@+id/entry_day"
            tools:text="26"
            app:fontFamily="@font/ubuntu_medium"/>

        <TextView
            android:id="@+id/entry_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            tools:text="Jun"
            app:fontFamily="@font/ubuntu_medium"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="vertical">

        <!-- TextView that displays the description -->
        <TextView
            android:id="@+id/entry_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8B8B8B"
            tools:text="ALC Challenge 2.0 Day 2"
            app:fontFamily="@font/ubuntu_medium"/>

        <!-- TextView that displays the description -->
        <TextView
            android:id="@+id/entry_description"
            style="@style/TextAppearance.AppCompat.Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8B8B8B"
            tools:text="Planning and designing"
            app:fontFamily="@font/ubuntu"
            />


    </LinearLayout>

</LinearLayout>


